# Application
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database - Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/[database]?schema=public
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Shopify API
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret
SHOPIFY_SCOPES=read_orders,read_products,read_customers,read_analytics
SHOPIFY_APP_URL=https://your-app.ngrok.io

# Square API
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key
SQUARE_ENVIRONMENT=sandbox

# Resend Email Service
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Tax Service API (if using external service)
TAX_SERVICE_API_KEY=your-tax-service-api-key
TAX_SERVICE_API_URL=https://api.taxservice.com

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# File Storage (Optional - for document storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Encryption (for sensitive integration data)
ENCRYPTION_KEY=your-32-character-encryption-key

# Webhook URLs (for development)
WEBHOOK_BASE_URL=https://your-app.ngrok.io/api/webhooks